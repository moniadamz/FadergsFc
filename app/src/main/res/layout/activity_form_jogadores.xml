<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity"
    android:orientation="vertical">

            <TextView
                android:id="@+id/jogadoresTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/teamName"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="textCapWords"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

               <EditText
                   android:id="@+id/eTNomeJogador"
                   android:hint="@string/hintPlayer"
                   android:inputType="textCapWords"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/eTCamisaJogador"
                    android:hint="@string/hintTshirt"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:id="@+id/activityFormJogadoresBtSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/saveButton"
                android:background="#488B4A" />

    <ListView
        android:id="@+id/form_Activity_Lv_Jogadores"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>